<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blankclean"
    tools:context=".MyActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Totalinch"
        android:textColor="#ffffffff"
        android:layout_row="10"
        android:layout_column="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Xinch"
        android:layout_alignStart="@+id/Xinch"
        android:layout_marginTop="122dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Yinch"
        android:textColor="#ffffffff"
        android:layout_row="11"
        android:layout_column="9"
        android:layout_gravity="bottom"
        android:layout_marginLeft="33dp"
        android:layout_below="@+id/Xinch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="106dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Xinch"
        android:textColor="#ffffffff"
        android:layout_column="9"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Yinch"
        android:layout_alignStart="@+id/Yinch" />

</RelativeLayout>
